{
  "name": "psychic-octo-doodle",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "engines": {
    "node": "20"
  },
  "scripts": {
    "build": "npx tsc --project tsconfig.build.json",
    "start": "node dist/index.js",
    "test": "jest --coverage",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration",
    "dev": "concurrently \"npx tsc --project tsconfig.build.json --watch\" \"nodemon -q dist/index.js\"",
    "prettier": "npx prettier --write ./src",
    "fix:code": "npx eslint --fix --ignore-path .gitignore --ignore-path .prettierignore --ext .ts .",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/r-amos/psychic-octo-doodle.git"
  },
  "author": "Robert Amos",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/r-amos/psychic-octo-doodle/issues"
  },
  "type": "module",
  "homepage": "https://github.com/r-amos/psychic-octo-doodle#readme",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@swc/jest": "^0.2.26",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "concurrently": "^8.0.1",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "13.2.2",
    "nodemon": "^2.0.22",
    "prettier": "2.8.8",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "lint-staged": {
    "*.ts": [
      "npx eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
